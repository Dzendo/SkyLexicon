<!-- Макет для одного элемента данных -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--import type="com.app4web.asdzendo.todo.ui.BindingConverters"  alias="BC"/-->

        <variable
            name="word"
            type="com.dinadurykina.skylexicon.network.WordRecycler"/>
        <!--Вариант SkySearchViewModel-->
        <variable
            name="viewmodel"
            type="com.dinadurykina.skylexicon.ui.search.SkySearchViewModel" />
        <!--Вариант SkySearchListener-->
        <!--variable
            name="clickListener"
            type="com.dinadurykina.skylexicon.ui.search.SkySearchListener" /-->
    </data>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:onClick="@{() -> viewmodel.onSkySearchClicked(word.idRus)}"
        android:orientation="horizontal"
        android:textSize="@dimen/text_size">
        <!--Вариант SkySearchListener-->
        <!--android:onClick="@{() -> clickListener.onClick(word)}"-->

        <ImageButton
            android:id="@+id/sky_image_previewUrl"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:onClick="@{() -> viewmodel.onSkyImageClicked(word.imageUrl)}"
            android:padding="2dp"
            android:scaleType="fitXY"
            app:imageUrl="@{word.previewUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{word.idRus}"
            android:visibility="gone"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{word.textEng}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_size"
            tools:text="chair"/>

        <TextView
            android:id="@+id/text_rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{word.textRus}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_size"
            tools:text="должность профессора"/>

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{word.note}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_size"
            tools:text="в оркестре"/>

        <TextView
            android:id="@+id/transcription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{word.transcription}"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="[ bɑːθ ʧeə ]"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:id="@+id/button_sound"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="6"
            android:background="@color/white"
            android:baselineAligned="false"
            android:onClick="@{() -> viewmodel.onListenSoundClicked(word.soundUrl)}"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:tint="@color/purple_700" />

    </GridLayout>
</layout>

    <!--Если все элементы списка выглядят одинаково,
        вы можете использовать один и тот же макет для всех,
         но это не обязательно-->